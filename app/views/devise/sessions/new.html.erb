<style>
.checkbox_class{width:auto;}
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 style="margin-top:100px; text-align:center;">Log in</h2>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="field col-md-6 offset-md-3 ">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field col-md-6 offset-md-3 ">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field col-md-6 offset-md-3 ">
          <%= f.check_box :remember_me, {:class => "checkbox_class"} %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions col-md-6 offset-md-3 ">
        <%= f.submit "Log in" %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6 offset-md-3 ">
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
