<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %> | <%= link_to 'Back', admin_staff_path %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <%= form_for @staff, url: edit_staff_path(@staff), html: { method: :put } do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </p>
    
        <p>
          <%= f.label :role %><br>
          <%= f.text_field :role %>
        </p> 
    
        <p>
          <%= f.label :bio %><br>
          <%= f.text_area :bio, placeholder: "Please use HTML tags" %>
        </p>
        
        <p>
          <%= f.label :profile_pic %><br>
          <strong>Current:</strong> <%= @staff.image_url %><br>
          <%= f.file_field :profile_pic %>
        </p>

        <p>
          <%= f.label :order %><br>
          <%= f.select :order, options_for_select(0..@max, @staff.order) %>
        </p> 

        <p>
          <%= f.submit :class => "btn btn-success" %>
        </p>

        <%= link_to 'Delete', destroy_staff_path(@staff), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger full-width" %>
      <% end %>
    </div>
  </div>
</div>