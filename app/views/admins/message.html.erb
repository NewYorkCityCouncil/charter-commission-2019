<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %> | <%= link_to 'Back', :back %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <%= form_for @comment, url: edit_message_path(@comment), html: { method: :put } do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name, disabled:true %>
        </p>
    
        <p>
          <%= f.label :email %><br>
          <%= f.text_field :email, disabled:true %>
        </p> 

         <p>
          <%= f.label :borough %><br>
          <%= f.text_field :borough, disabled:true %>
        </p> 
    
        <p>
          <%= f.label :message %><br>
          <%= f.text_area :message, disabled:true %>
        </p>

        <% if !@comment.comment_attachment.file.nil? %>
          <p>
            <%= f.label :comment_attachment %><br>
            <a href=<%= @comment.comment_attachment.url %> download="<%=@comment.name.split(" ").join("_")%>-<%=@comment.created_at.to_s.split(" ")[0].split("-").join("")%><%=@comment.created_at.to_s.split(" ")[1].split(":").join("")%>"> <%=@comment.comment_attachment.file.filename%> </a>
          </p>
        <% end %>
        
        <%= link_to 'Delete', destroy_message_path(@comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger full-width" %>
        <!--<p>
          <%#= f.submit %>
        </p>-->
      <% end %>
    </div>
  </div>
</div>