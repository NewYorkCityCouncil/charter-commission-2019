<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %> | <%= link_to 'Back', admin_jobs_path %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <%= form_for @job, url: edit_job_path(@job), html: { method: :put } do |f| %>
        <p>
          <%= f.label :position %><br>
          <%= f.text_field :position %>
        </p>
    
        <p>
          <%= f.label :number_of_positions %><br>
          <%= f.text_field :number_of_positions %>
        </p> 

        <p>
          <%= f.label :open_date %><br>
          <%= f.text_field :open_date %>
        </p> 

        <p>
          <%= f.label :close_date %><br>
          <%= f.text_field :close_date %>
        </p> 
    
        <p>
          <%= f.label :duties_and_responsibilities %><br>
          <%= f.text_area :duties_and_responsibilities, placeholder: "Please use HTML tags" %>
        </p>

        <p>
          <%= f.label :responsibilities %><br>
          <%= f.text_area :responsibilities, placeholder: "Please use HTML <ul> and <li> tags" %>
        </p>

        <p>
          <%= f.label :requirements %><br>
          <%= f.text_area :requirements, placeholder: "Please use HTML <ul> and <li> tags" %>
        </p>

        <p>
          <%= f.label :attention %><br>
          <%= f.text_field :attention %>
        </p> 

        <p>
          <%= f.label :council_url %><br>
          <%= f.text_field :council_url %>
        </p> 

        <p>
          <%= f.label :order %><br>
          <%= f.select :order, options_for_select(0..@max, @job.order) %>
        </p> 

        <p>
          <%= f.submit :class => "btn btn-success" %>
        </p>

        <%= link_to 'Delete', destroy_job_path(@job), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger full-width" %>
     
      <% end %>
    </div>
  </div>
</div>