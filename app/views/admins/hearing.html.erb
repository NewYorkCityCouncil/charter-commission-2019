<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %> | <%= link_to 'Back', :back %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <%= form_for @hearing, url: edit_hearing_path(@hearing), html: { method: :put } do |f| %>
        <p>
          <%= f.label :date_of_hearing %><br>
          <%= f.datetime_local_field :date_of_hearing %>
        </p>
        
        <p>
          <%= f.label :location_of_hearing %><br>
          <%= f.text_field :location_of_hearing %>
        </p> 

        <p>
          <%= f.label :address_1 %><br>
          <%= f.text_field :address_1 %>
        </p> 

        <p>
          <%= f.label :address_2 %><br>
          <%= f.text_field :address_2 %>
        </p> 

        <p>
          <%= f.label :city %><br>
          <%= f.text_field :city %>
        </p>

        <p>
          <%= f.label :zip_code %><br>
          <%= f.text_field :zip_code %>
        </p> 

        <p>
          <%= f.label :google_maps_url %><br>
          <%= f.text_field :google_maps_url %>
        </p> 

        <p>
          <%= f.label :transcript_url %><br>
          <%= f.text_field :transcript_url %>
        </p> 
    
        <p>
          <%= f.label :youtube_url %><br>
          <%= f.text_field :youtube_url %>
        </p> 

        <p>
          <%= f.label :livestream_embed %><br>
          <%= f.text_field :livestream_embed %>
        </p> 

        <p>
          <%= f.label :hearing_content %><br>
          <%= f.text_area :hearing_content, placeholder: "Please use HTML tags" %>
        </p>

        <p>
          <%= f.label :minutes %><br>
          <%= f.text_area :minutes, placeholder: "Please use HTML tags" %>
        </p>

        <p>
          <%= f.label :hearing_attachments %><br>
          <%= f.file_field :hearing_attachments, multiple: true %>
        </p>

        <p>
          <%= f.submit :class => "btn btn-success" %>
        </p>

        <%= link_to 'Delete', destroy_hearing_path(@hearing), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger full-width" %>
      <% end %>
    </div>
  </div>
</div>