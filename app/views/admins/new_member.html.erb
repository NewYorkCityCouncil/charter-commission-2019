<div class="container">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Home', admin_path %> | <%= link_to 'All Members', admin_members_path %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-12">
      <%= form_for @member, url: admin_members_new_path(@member), html: { method: :post } do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :appointer %><br>
          <%= f.text_field :appointer %>
        </p> 
    
        <p>
          <%= f.label :role %><br>
          <%= f.text_field :role %>
        </p> 
    
        <p>
          <%= f.label :bio %><br>
          <%= f.text_area :bio, placeholder: "Please use HTML tags" %>
        </p>

        <p>
          <%= f.label :profile_pic %><br>
          <%= f.file_field :profile_pic %>
        </p>

        <p>
          <%= f.label :order %><br>
          <%= f.select :order, options_for_select(0..Member.all.length,Member.all.length) %>
        </p> 

        <p>
          <%= f.submit :class => "btn btn-success" %>
        </p>
      <% end %>
    </div>
  </div>
</div>