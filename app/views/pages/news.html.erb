  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="page-title">News</h2>
        <div style="margin-left:30px">
          <% if @all_news.length == 0 %>
            <p>Stay tuned for the latest on our work!</p>
          <% else %>
            <% if @press_releases.length > 0 %>
              <h3 class="underline">Press Releases</h3>
              <% @press_releases.each do |press_release| %>
                <p>
                  <%= link_to press_release.title, show_news_path(press_release.order,press_release.title) %><br>
                  <small><%= press_release.publication_date %></small>
                  <% if press_release.news_attachments.length > 0 %>
                    <ul>
                      <% press_release.news_attachments.each do |attachment| %>
                        <li><a href="<%= attachment.url %>"><%= attachment.url.split("/").last.split("_").join(" ").split(".").first %></a></li>
                      <% end %>
                    </ul>
                  <% end %>
                </p>
              <% end %>
            <% end %>

            <% if @newsletters.length > 0 %>
              <h3 class="underline">Newsletters</h3>
              <% @newsletters.each do |newsletter| %>
                <p>
                  <%= link_to newsletter.title, show_news_path(newsletter.order,newsletter.title) %><br>
                  <small><%= newsletter.publication_date %></small>
                  <% if newsletter.news_attachments.length > 0 %>
                    <ul>
                      <% newsletter.news_attachments.each do |attachment| %>
                        <li><a href="<%= attachment.url %>"><%= attachment.url.split("/").last.split("_").join(" ").split(".").first %></a></li>
                      <% end %>
                    </ul>
                  <% end %>
                  </p>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
